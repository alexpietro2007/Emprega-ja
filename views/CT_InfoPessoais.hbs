<head>
  <link rel="stylesheet" href="/CSS/cadastroTrabalhador_Style.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
    rel="stylesheet"
  />
</head>

<main class="container">
  <div class="progress">
    <div class="step active">1</div>
    <div class="step">2</div>
    <div class="step">3</div>
    <div class="step">4</div>
  </div>
  <section class="form-section">
    <h1>Cadastro de Trabalhador</h1>

    <!-- Formulário do trabalhador -->
    <form
      action="/cadastro/trabalhador/dados-enviados/informacoes-pessoais"
      method="post"
      class="form"
    >

      <!-- Nome -->
      <div class="form-group">
        <label for="nome">*Nome completo</label>
        <input
          type="text"
          id="nome"
          name="nome"
          placeholder="Digite seu nome completo"
          required
        />
      </div>

      <!-- CPF -->
      <div class="form-group">
        <label for="cpf">*CPF</label>
        <input
          type="text"
          id="cpf"
          name="cpf"
          placeholder="000.000.000-00"
          required
        />
      </div>

      <!-- Data de nascimento -->
      <div class="form-group">
        <label for="dataNasc">*Data de nascimento</label>
        <input type="date" id="dataNasc" name="dataNasc" required />
      </div>

      <!-- Sexo -->
      <fieldset class="form-group">
        <legend>*Sexo</legend>
        <div class="radio-group">
          <label class="radio-option">
            Masculino
            <input
              type="radio"
              id="masculino"
              name="sexo"
              value="Masculino"
              required
            />
          </label>
          <label class="radio-option">
            Feminino
            <input
              type="radio"
              id="feminino"
              name="sexo"
              value="Feminino"
              required
            />
          </label>
        </div>
      </fieldset>

      <!-- Botão Enviar -->
      <div class="form-actions">
        <button type="submit">Pronto</button>
      </div>

    </form>

    <!-- Links separados -->
    <!-- Links separados -->
    <div class="login-links">
      <a href="/login/trabalhador" class="btn-login">Já tenho login</a>
      <a href="/login/empresa" class="btn-empresa">Sou uma empresa</a>
      <a href="/login/admin" class="btn-admin">Administração</a>
    </div>

  </section>
</main>